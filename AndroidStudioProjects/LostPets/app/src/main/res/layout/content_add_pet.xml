<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.master.LostPets.AddPetActivity"
    tools:showIn="@layout/activity_add_pet">

    <!-- do this in java bit:
    v.setFocusable(true);
    v.setFocusableInTouchMode(true);
        from http://stackoverflow.com/questions/18295802/how-to-make-edittext-not-focused-when-creating-activity -->

    <Button
        android:id="@+id/TapToAddPicButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Tap to add Pic"
        android:layout_centerHorizontal="true"
        android:background="@null"
        />

    <!--Add enter text-->
    <EditText
        android:id="@+id/NameButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="name:"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:background="@color/colorPrimary"
        android:layout_below="@id/TapToAddPicButton"
        />
    <LinearLayout
        android:id="@+id/CatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameButton"
        android:orientation="horizontal"
        android:gravity="left"
        android:padding="6dp"
        android:weightSum="2">

        <Button
            android:id="@+id/CatButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cat"
            android:background="@color/colorPrimary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/DogLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameButton"
        android:orientation="horizontal"
        android:gravity="right"
        android:padding="6dp"
        android:weightSum="2">

        <Button
            android:id="@+id/DogButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Dog"
            android:background="@color/colorPrimary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1" />

    </LinearLayout>
    <Button
        android:id="@+id/MAP"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="MAP HERE(INFLATES TO SCREEN)"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/DogLayout"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NEXT"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/MAP"
        />
-->
</RelativeLayout>
