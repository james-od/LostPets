<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.master.LostPets.ReportLostPetActivity"
    tools:showIn="@layout/activity_report_lost_pet">

    <!--


    THERE WILL BE A SCREEN BEFORE THIS WHERE YOU CAN TRY AND FIND THE OWNER VIA THEIR LOST POST

    -->

    <TextView
        android:id="@+id/ContactOwnerOnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Owner on:"
        />

    <TextView
        android:id="@+id/ContactNumberforOwner"
        android:layout_below="@+id/ContactOwnerOnText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="07XXXXXXXXX"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/ContactOwnerOnEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Email Owner at:"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ContactNumberforOwner"
        />


    <TextView
        android:id="@+id/ContactEmailForOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ContactOwnerOnEmail"
        android:layout_marginTop="0dp"
        android:background="@color/colorAccent"
        android:text="XXXXXXXX@XXX.com"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/AnyIssuesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ContactEmailForOwner"
        android:layout_marginTop="10dp"
        android:text="If there are any issues please contact us at companyemail.com or 07XXXXXXXX, we will not use your information for..."
        />


</RelativeLayout>
